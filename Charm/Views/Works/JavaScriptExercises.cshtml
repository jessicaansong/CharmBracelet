
@{
    ViewBag.Title = "JavaScriptExercises";
}

<div class="move">

</div>
<div id="portfolio-header" class="text-center">
    <h1 class="section-title"><span>JavaScript </span>Exercises<i class="fa fa-code"></i></h1>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <li><a href="" data-toggle="modal" data-target="#max">Max of Five</a></li>
                </div>
                <div class="col-md-6">
                  <h2>Happy Numbers</h2>
                </div>
            </div>
        </div>
    </div>

<!--Max of Five Modal-->
<div class="modal fade" id="max" tabindex="50" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h1 class="modal-title" id="myModalLabel">Max of Five</h1>
            </div>
            <div class="modal-body col-sm-12">
                <div class="row">
                    <div class="col-sm-6">
                        <!--Left Column-->
                        <h3><strong>Description: </strong></h3>
                        <p>
                            I designed a program that enables the computer to return the largest of five numbers. Enter five numbers in each of the five text boxes below. Press "Enter" and the largest number will be displayed.
                        </p>
                        <br />
                        <div class="row">
                            <div class="col-3-md">
                        </div>
                            <div class="col-3-md">
                                <input type="text" id="n1" />
                            </div>
                            <div class="col-3-md">
                                <input type="text" id="n2" />
                            </div>
                            <div class="col-3-md">
                                <input type="text" id="n3" />
                            </div>
                            <div class="col-3-md">
                                <input type="text" id="n4" />
                            </div>
                            <div class="col-3-md">
                                <input type="text" id="n5" />
                            </div>
                            
                            
                            
                            <button onclick="maxOfFive()">Enter</button>
                            <p id="maxResult"></p>
                        </div>

                    </div>
                    <!--Right Column-->
                    <div class="col-sm-6">
                        <pre class="brush: js text">
                            function maxOfFive(){ //Define the function
                            var n1 = document.getElementById('n1').value; //Created 5 variables
                            var n2 = document.getElementById('n2').value;
                            var n3 = document.getElementById('n3').value;
                            var n4 = document.getElementById('n4').value;
                            var n5 = document.getElementById('n5').value;
                            var result = Math.max(n1, n2, n3, n4, n5); //Take the largest of these variables
                            var display = document.getElementById('maxResult'); //Show the largest number
                            display.innerHTML = "The largest number is " + result ;
                            }
                        </pre>
                    </div>
                </div>
            </div>
            <div class="modal-footer no-margin">
            </div>
        </div>
    </div>
</div>

